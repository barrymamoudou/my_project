{% extends 'base.html.twig' %}

{% block title 'Gère les biens' %}

{% block body %}
    <div class="container mt-4">
    <h2>Gère les Biens</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for property in properties %}
                   <tr>
                    <td>{{ property.title }}</td>
                    <td>
                        <a href="{{ path('admin_edit',{ 'id': property.id }) }}">Edit</a>
                        <a href="">Delete</a>
                    </td>
                   </tr> 
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
